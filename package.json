{
  "name": "prestamos-manager-pro",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",

  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "dist": "npm run build && electron-builder"
  },

  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },

  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.0",
    "vite": "^6.2.0",

    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",

    "tailwindcss": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "postcss": "^8.5.6",
    "autoprefixer": "^10.4.23"
  },

  "build": {
    "appId": "com.prestamos.manager",
    "productName": "PrestamosManager Pro",

    "asar": true,

    "files": [
      "dist/**/*",
      "electron/**/*"
    ],

    "extraResources": [
      {
        "from": "backend_dist/backend.exe",
        "to": "backend.exe"
      }
    ],

    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    }
  }
}
